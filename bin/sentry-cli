#!/usr/bin/env node
/*
 * a wrapper script
 */
const cli = require('../index.js');
const child = require('child_process').spawn(cli.getPath(), process.argv.slice(2), {
  stdio: 'inherit',
});

child.on('error', err => {
  // eslint-disable-next-line
  console.error('error: failed to invoke sentry-cli');
  // eslint-disable-next-line
  console.error(err.stack);
});

child.on('exit', code => {
  process.exit(code);
});

process.on('SIGTERM', () => {
  child.kill('SIGTERM');
});

process.on('SIGINT', () => {
  child.kill('SIGINT');
});
