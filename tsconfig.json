{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "target": "ES2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "js",
    "outDir": "js-dist",
    "declaration": true
  },
  "include": ["js/**/*.ts", "js/**/*.js"],
  "exclude": ["**/__tests__/**", "**/__mocks__/**"]
}
